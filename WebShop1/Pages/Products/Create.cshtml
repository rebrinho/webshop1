<h4>Dodajanje novega produkta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Vrsta" class="control-label"></label>
                <select asp-for="Product.Vrsta" class="form-control">
                    <option value="osebnoVozilo">Osebno vozilo</option>
                    <option value="motornoKolo">Motorno kolo</option>
                    <option value="plovilo">Plovilo</option>
                    <option value="tovornoVozilo">Tovorno vozilo</option>
                </select>
                <span asp-validation-for="Product.Vrsta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Znamka" class="control-label"></label>
                <input asp-for="Product.Znamka" class="form-control" />
                <span asp-validation-for="Product.Znamka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Model" class="control-label"></label>
                <input asp-for="Product.Model" class="form-control" />
                <span asp-validation-for="Product.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Leto" class="control-label"></label>
                <input asp-for="Product.Leto" class="form-control" />
                <span asp-validation-for="Product.Leto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Motor" class="control-label"></label>
                <input asp-for="Product.Motor" class="form-control" />
                <span asp-validation-for="Product.Motor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Barva" class="control-label"></label>
                <input asp-for="Product.Barva" class="form-control" />
                <span asp-validation-for="Product.Barva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Cena" class="control-label"></label>
                <input asp-for="Product.Cena" class="form-control" />
                <span asp-validation-for="Product.Cena" class="text-danger"></span>
            </div>


