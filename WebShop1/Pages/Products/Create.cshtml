                    <input type="submit" value="Dodaj produkt" class="btn btn-success" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Prekliči" class="btn btn-danger" />
                </div>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="btn btn-default">Nazaj na seznam produktov</a>
